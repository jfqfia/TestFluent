/*******************************
 ** GRAMMAR
 *******************************
 ** Conversation
 ** ConversationPunct
 *******************************/

(RConversation2 : 
	[Conversation/0 -> lexAgree]
		{ ^ <- (Agree:'on'); } )

(RConversation3 : 
	[Conversation/0 -> lexRefuse]
		{ ^ <- (Refuse:'on'); } )

(RConversation4 : 
	[Conversation/0 -> lexRepeat]
		{ ^ <- (Repeat:'on'); } )

(RConversation5 : 
	[Conversation/2 -> Conversation/2 lexConversation]
		{ ^ <- #1; } )

(RConversation6 : 
	[Conversation/3 -> lexConversation 
			< punctColon | punctComma | punctDot | punctSemicolon > ?
			Conversation/3]
		{ ^ <- #3; } )

(RConversation7 : 
	[Conversation/3 -> Conversation/3 Conversation/2]
		{ ^ <- #2; } )

(RConversationPunct1 : 
	[ConversationPunct/1 -> Conversation/3 
			< punctColon | punctComma | punctDot | punctSemicolon |
			  punctExclamationClose | punctQuestionClose > ]
		{ ^ <- #1; } )

(RConversationPunct2 : 
	[ConversationPunct/1 -> ConversationPunct/1 
			< punctColon | punctComma | punctDot | punctSemicolon |
			  punctExclamationClose | punctQuestionClose > ]
		{ ^ <- #1; } )

(RConversationPunct3 : 
	[ConversationPunct/2 -> < punctExclamationOpen | punctQuestionOpen >
			Conversation/3 ]
		{ ^ <- #2; } )

(RConversationPunct4 : 
	[ConversationPunct/2 -> < punctExclamationOpen | punctQuestionOpen >
			ConversationPunct/2 ]
		{ ^ <- #2; } )

(RConversationPunct5 : 
	[ConversationPunct/3 -> ConversationPunct/3 ConversationPunct/2]
		{ ^ <- #1; ^ <OW< #2; } )

(RConversationPunct6 : 
	[Conversation/4 -> ConversationPunct/3 ]
		{ ^ <- #1; } )
