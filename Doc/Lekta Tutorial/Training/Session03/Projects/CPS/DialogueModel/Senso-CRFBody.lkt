/*******************************
 ** Senso / ActScope / Functions
 *******************************/

integer	RaiseCR(Command linput) 
{
	integer openRaise;

	/*
	SpyMessage("=> RaiseCR / Input:");
	SpyMessage(linput);
	*/

	$MINDBOARD@Setup.ActionSetup <- 'run';

	openRaise <- 0;

	if ((!!$MINDBOARD@fOpen.GModel) && (!!$MINDBOARD@fOpen.CModel) && (!!$MINDBOARD@fOpen.ReceivedCommand)) {
		raiseNewOpenModel(linput);
		openRaise <- 1;
	}

	if ((!!openRaise) && $MINDBOARD@fOpen.GModel) {
		if ($MINDBOARD@fOpen.GModel.OperPurpose) {
			if (AnalyzeOperPurposeActScopeCoherence($MINDBOARD@fOpen.GModel.OperPurpose.OperPurposeDescriptor,
					linput.ActScope.ActScopeDescriptor)) {
				if ($MINDBOARD@fOpen.GModel.ActScope.ActScopeDescriptor) {
					if ($MINDBOARD@fOpen.GModel.ActScope.ActScopeDescriptor == linput.ActScope.ActScopeDescriptor) {
						openRaise <- 1;
					}
				} else {
					raiseFusionOpenModel(linput);
					openRaise <- 1;
				}
			}
		} else {
			if ($MINDBOARD@fOpen.GModel.ActScope) {
				if ($MINDBOARD@fOpen.GModel.ActScope.ActScopeDescriptor == linput.ActScope.ActScopeDescriptor) {
					openRaise <- 1;
				}
			} else {
				if ($MINDBOARD@fOpen.GModel.LinkedInfo) {
					if (AnalyzeActScopeLinkedInfoCoherence(linput.ActScope.ActScopeDescriptor,
							$MINDBOARD@fOpen.GModel.LinkedInfo.LinkedInfoDescriptor)) {
						raiseFusionOpenModel(linput);
						openRaise <- 1;
					}
				}
			}
		}
	}

	if ((!!openRaise) && $MINDBOARD@fOpen.CModel) {
		if ($MINDBOARD@fOpen.CModel.OperPurpose) {
			if (AnalyzeOperPurposeActScopeCoherence($MINDBOARD@fOpen.CModel.OperPurpose.OperPurposeDescriptor,
					linput.ActScope.ActScopeDescriptor)) {
				if ($MINDBOARD@fOpen.CModel.ActScope.ActScopeDescriptor) {
					if ($MINDBOARD@fOpen.CModel.ActScope.ActScopeDescriptor == linput.ActScope.ActScopeDescriptor) {
						openRaise <- 1;
					}
				} else {
					raiseFusionOpenModel(linput);
					openRaise <- 1;
				}
			}
		} else {
			if ($MINDBOARD@fOpen.CModel.ActScope) {
				if ($MINDBOARD@fOpen.CModel.ActScope.ActScopeDescriptor == linput.ActScope.ActScopeDescriptor) {
					openRaise <- 1;
				}
			} else {
				if ($MINDBOARD@fOpen.CModel.LinkedInfo) {
					if (AnalyzeActScopeLinkedInfoCoherence(linput.ActScope.ActScopeDescriptor,
							$MINDBOARD@fOpen.CModel.LinkedInfo.LinkedInfoDescriptor)) {
						raiseFusionOpenModel(linput);
						openRaise <- 1;
					}
				}
			}
		}
	}

	if ((!!openRaise) && $MINDBOARD@fOpen.ReceivedCommand) {
		if ($MINDBOARD@fOpen.ReceivedCommand.OperPurpose) {
			if (AnalyzeOperPurposeActScopeCoherence($MINDBOARD@fOpen.ReceivedCommand.OperPurpose.OperPurposeDescriptor,
					linput.ActScope.ActScopeDescriptor)) {
				if ($MINDBOARD@fOpen.ReceivedCommand.ActScope.ActScopeDescriptor) {
					if ($MINDBOARD@fOpen.ReceivedCommand.ActScope.ActScopeDescriptor == linput.ActScope.ActScopeDescriptor) {
						openRaise <- 1;
					}
				} else {
					raiseFusionOpenModel(linput);
					openRaise <- 1;
				}
			}
		} else {
			if ($MINDBOARD@fOpen.ReceivedCommand.ActScope) {
				if ($MINDBOARD@fOpen.ReceivedCommand.ActScope.ActScopeDescriptor == linput.ActScope.ActScopeDescriptor) {
					openRaise <- 1;
				}
			} else {
				if ($MINDBOARD@fOpen.ReceivedCommand.LinkedInfo) {
					if (AnalyzeActScopeLinkedInfoCoherence(linput.ActScope.ActScopeDescriptor,
							$MINDBOARD@fOpen.ReceivedCommand.LinkedInfo.LinkedInfoDescriptor)) {
						raiseFusionOpenModel(linput);
						openRaise <- 1;
					}
				}
			}
		}
	}

	if (openRaise) {
		integer cupn;
		cupn <- DialogueInteractionCounter();
		$MINDBOARD@fOpen.RProf  <- cupn;
	} else {
		raisePendModel(linput);
	}

	/*
	SpyMessage("=> RaiseCR / Output:");
	SpyMessage("     fOpen: ");
	SpyMessage($MINDBOARD@fOpen);
	SpyMessage("     fPend: ");
	SpyMessage($MINDBOARD@fPend);
	*/

	return 1;
}
