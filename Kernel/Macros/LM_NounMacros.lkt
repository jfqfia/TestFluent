/* ************************** REGULAR NOUNS ENDING IN VOWEL *************************** */
/*											*/
/* NOUN_REGV_MFSP	perro => perro, perra, perros, perras				*/
/* NOUN_REGV_MSP 	cabo => cabo, cabos						*/
/* NOUN_REGV_FSP 	casa => casa, casas						*/
/* NOUN_REGV_SP	estudiante => estudiante, estudiantes					*/
/* ************************************************************************************ */

// MASCULINE AND FEMININE REGULAR NOUNS ENDING IN VOWEL
#DefMacro	NOUN_REGV_VARIANTS_MFSP ( lemma ) \
	( LingModel: (SyntHead:(SyntVariants:(SyntThirdPerson:( \
		SyntSingular:(SyntMasculine : ( SpelledForm:lemma ),    SyntFeminine:(SpelledForm:lemma[$-1]++a )), \
		SyntPlural:(  SyntMasculine : ( SpelledForm:lemma++s ), SyntFeminine:(SpelledForm:lemma[$-1]++as)))))))

#DefMacro       NOUN_REGV_MFSP ( lemma )		&NOUN_REGV_MFSP( lemma, _EMPTY )
#DefMacro       NOUN_REGV_MFSP ( lemma, params ) \
        ( lemma                 , noun, &LEMMA(lemma) &NOUN_REGV_VARIANTS_MFSP( lemma ) _MASCULINE _3rd _SINGULAR params ) \
        ( lemma++s              , noun, &LEMMA(lemma) &NOUN_REGV_VARIANTS_MFSP( lemma ) _MASCULINE _3rd _PLURAL params ) \
        ( lemma[$-1]++a         , noun, &LEMMA(lemma) &NOUN_REGV_VARIANTS_MFSP( lemma ) _FEMININE _3rd _SINGULAR params ) \
        ( lemma[$-1]++as        , noun, &LEMMA(lemma) &NOUN_REGV_VARIANTS_MFSP( lemma ) _FEMININE _3rd _PLURAL params )

#DefMacro       NOUN_REGV_MFSP ( lemma, spelled, params ) \
        ( spelled		, noun, &LEMMA(lemma) &NOUN_REGV_VARIANTS_MFSP( lemma ) &SPELLED( lemma ) _MASCULINE _3rd _SINGULAR params ) \
        ( spelled++s            , noun, &LEMMA(lemma) &NOUN_REGV_VARIANTS_MFSP( lemma ) (LingModel : ( SyntHead:( WordForm : ( SpelledForm : lemma++s ))))  _MASCULINE _3rd _PLURAL params ) \
        ( spelled[$-1]++a       , noun, &LEMMA(lemma) &NOUN_REGV_VARIANTS_MFSP( lemma ) (LingModel : ( SyntHead:( WordForm : ( SpelledForm : lemma[$-1]++a )))) _FEMININE _3rd _SINGULAR params ) \
        ( spelled[$-1]++as      , noun, &LEMMA(lemma) &NOUN_REGV_VARIANTS_MFSP( lemma ) (LingModel : ( SyntHead:( WordForm : ( SpelledForm : lemma[$-1]++as )))) _FEMININE _3rd _PLURAL params )
        
// MASCULINE REGULAR NOUNS ENDING IN VOWEL
#DefMacro	NOUN_REGV_VARIANTS_MSP ( lemma ) \
	( LingModel: (SyntHead:(SyntVariants:(SyntThirdPerson:( \
		SyntSingular:(SyntMasculine : ( SpelledForm:lemma )), \
		SyntPlural:(  SyntMasculine : ( SpelledForm:lemma++s )))))))

#DefMacro	NOUN_REGV_MSP ( lemma )		&NOUN_REGV_MSP( lemma, _EMPTY )
#DefMacro	NOUN_REGV_MSP ( lemma, params ) \	
        ( lemma		, noun, &LEMMA(lemma) _MASCULINE &NOUN_REGV_VARIANTS_MSP( lemma ) _3rd _SINGULAR _UNIGENDER params ) \
        ( lemma++s	, noun, &LEMMA(lemma) _MASCULINE &NOUN_REGV_VARIANTS_MSP( lemma ) _3rd _PLURAL _UNIGENDER params )  

#DefMacro	NOUN_REGV_MSP ( lemma, spelled, params ) \
        ( spelled	, noun, &LEMMA(lemma) &SPELLED( lemma ) &NOUN_REGV_VARIANTS_MFSP( lemma ) _MASCULINE _3rd _SINGULAR _UNIGENDER params ) \
        ( spelled++s	, noun, &LEMMA(lemma) &NOUN_REGV_VARIANTS_MFSP( lemma ) ( LingModel: ( SyntHead: ( WordForm : ( SpelledForm : lemma++s )))) _MASCULINE _3rd _PLURAL _UNIGENDER params ) 

