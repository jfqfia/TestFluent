	( lemma++s	, noun, &LEMMA(lemma) &NOUN_REGV_VARIANTS_SP( lemma ) _3rd _PLURAL params) 

#DefMacro	NOUN_REGV_SP ( lemma, spelled, params) \
	( spelled	, noun, &LEMMA(lemma) &SPELLED( lemma ) &NOUN_REGV_VARIANTS_SP( lemma ) _3rd _SINGULAR params) \
	( spelled++s	, noun, &LEMMA(lemma) &NOUN_REGV_VARIANTS_SP( lemma ) (LingModel:(SyntHead:(WordForm:(SpelledForm:lemma++s)))) _3rd _PLURAL params)

#DefMacro	NOUN_UNIQ ( lemma )	&NOUN_UNIQ( lemma, _EMPTY )
#DefMacro	NOUN_UNIQ ( lemma , params ) \
	( lemma		, noun	, &LEMMA(lemma) _3rd _UNIGENDER params )

#DefMacro	NOUN_UNIQ ( lemma , altform, params ) \
	( altform, noun	, &LEMMA(lemma) _3rd _UNIGENDER params )

#DefMacro	NOUN_UNIQ ( lemma , spelled, altform, params ) \
	( altform, noun	, &LEMMA(lemma) &SPELLED( spelled ) _3rd _UNIGENDER params )


#DefMacro	NOUN_IRREG_VARIANTS_SP ( sing, plural ) \
	( LingModel: (SyntHead:(SyntVariants:(SyntThirdPerson:( \
		SyntSingular:(SpelledForm:sing,   SyntMasculine : ( SpelledForm:sing ),    SyntFeminine:(SpelledForm:sing )), \
		SyntPlural:(  SpelledForm:plural, SyntMasculine : ( SpelledForm:plural ), SyntFeminine:(SpelledForm:plural)))))))

#DefMacro NOUN_IRREG	( sing, plural )	&NOUN_IRREG( sing, plural, _EMPTY )
#DefMacro NOUN_IRREG	( sing, plural, params ) \
	( sing		, noun	, &LEMMA( sing ) &NOUN_IRREG_VARIANTS_SP( sing, plural ) _3rd _SINGULAR params ) \
	( plural	, noun	, &LEMMA( sing ) &NOUN_IRREG_VARIANTS_SP( sing, plural ) _3rd _PLURAL params )

#DefMacro	NOUN_IRREG_VARIANTS_MFSP ( mascSing, feminSing, mascPlural, feminPlural ) \
	( LingModel: (SyntHead:(SyntVariants:(SyntThirdPerson:( \
		SyntSingular:(SyntMasculine : ( SpelledForm:mascSing),    SyntFeminine:(SpelledForm:mascPlural )), \
		SyntPlural:(  SyntMasculine : ( SpelledForm:feminSing ), SyntFeminine:(SpelledForm:feminPlural)))))))

#DefMacro NOUN_IRREG	( mascSing, feminSing, mascPlural, feminPlural )	&NOUN_IRREG( mascSing, feminSing, mascPlural, feminPlural, _EMPTY )
#DefMacro NOUN_IRREG	( mascSing, feminSing, mascPlural, feminPlural, params ) \
	( mascSing	, noun	, &LEMMA( mascSing ) &NOUN_IRREG_VARIANTS_MFSP( mascSing, feminSing, mascPlural, feminPlural ) _SINGULAR _3rd _MASCULINE params ) \
	( feminSing	, noun	, &LEMMA( mascSing ) &NOUN_IRREG_VARIANTS_MFSP( mascSing, feminSing, mascPlural, feminPlural ) _SINGULAR _3rd _FEMININE params ) \
	( mascPlural	, noun	, &LEMMA( mascSing ) &NOUN_IRREG_VARIANTS_MFSP( mascSing, feminSing, mascPlural, feminPlural ) _PLURAL _3rd _MASCULINE params ) \
	( feminPlural	, noun	, &LEMMA( mascSing ) &NOUN_IRREG_VARIANTS_MFSP( mascSing, feminSing, mascPlural, feminPlural ) _PLURAL _3rd _FEMININE params )


