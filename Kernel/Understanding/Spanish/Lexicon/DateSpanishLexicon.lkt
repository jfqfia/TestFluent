("before", 			lexTemporalModifier, -1)
("siguiente", 			lexTemporalModifier, 1)
("que viene", 			lexTemporalModifier, 1)
("pasado", 			lexTemporalModifier, 1)
("el siguiente", 		lexTemporalModifier, 1)
("la siguiente", 		lexTemporalModifier, 1)
("el próximo",	 		lexTemporalModifier, 1)
("la próxima",	 		lexTemporalModifier, 1)
("después",  			lexTemporalModifier, 1)
("después de", 			lexTemporalModifier, 1)
("después del",			lexTemporalModifier, 1)
("un par de",			lexTemporalModifier, 2)

