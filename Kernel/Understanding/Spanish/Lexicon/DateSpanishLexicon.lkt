// Basic lexical about dates
("día",				lexDay)
("día de",			lexDay)
("días",			lexDay)
("el día",			lexDay)
("el día de",			lexDay)
("la semana",			lexWeek)
("semana",			lexWeek)
("semanas",			lexWeek)
("el mes",			lexMonth)
("mes",				lexMonth)
("meses",			lexMonth)
("el año",			lexYear)
("año",				lexYear)
("años",			lexYear)

// Meta temporal modifiers
("hace",			lexMetaTemporalModifier, -1)
("en adelante",			lexMetaTemporalModifier, 1)
("dentro de",			lexMetaTemporalModifier, 1)

// Temporal modifiers
("el último", 			lexTemporalModifier, -1)
