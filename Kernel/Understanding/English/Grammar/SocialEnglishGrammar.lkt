// TODO Comment this new kind of rules

(DialogueActFromSocialRule :
 	[ DialogueAct -> Social ]
	{
		^ <- #1;
	}
)

// TODO So we can put here Social -> < Greeting | Bye | Thanks >
(SocialFromGreetingRule :
 	[ Social -> Greeting ]
	// [ Social -> < Greeting | Bye >]
	{
		^ <- #1;
		^.CoreDialogueAct.Dimension <- 'social';
	}
)

(GreetingFromLexRule :
 	[ Greeting -> lexGreeting ]
	{
		^.CoreDialogueAct.Function <- 'greeting';
	}
)

