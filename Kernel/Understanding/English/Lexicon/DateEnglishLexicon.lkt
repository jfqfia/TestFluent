// Basic lexical about dates
("day",				lexDay)
("days",			lexDay)
("the day",			lexDay)
("week",			lexWeek)
("weeks",			lexWeek)
("month",			lexMonth)
("months",			lexMonth)
("year",			lexYear)
("years",			lexYear)

// Meta temporal modifiers
("ago",				lexMetaTemporalModifier, -1)
("in advance",			lexMetaTemporalModifier, 1)

// Temporal modifiers
("last", 			lexTemporalModifier, -1)
("previous", 			lexTemporalModifier, -1)
("the previous",		lexTemporalModifier, -1)
("before", 			lexTemporalModifier, -1)
("next", 			lexTemporalModifier, 1)
("the next", 			lexTemporalModifier, 1)
("following",	  		lexTemporalModifier, 1)
("one after",  			lexTemporalModifier, 1)
("after",  			lexTemporalModifier, 1)
("a couple of",			lexTemporalModifier, 2)

// Lexical about offset days
("yesterday",			lexOffsetDay, -1)
("today",			lexOffsetDay, 0)
("now",  			lexOffsetDay, 0)
("tomorrow",			lexOffsetDay, 1)

