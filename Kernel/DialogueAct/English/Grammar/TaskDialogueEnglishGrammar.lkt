(TaskDialogueAct_Rule01	:
 	[ TaskDialogueAct -> TaskDialogueAct TaskDialogueAct ]
	{
		if( coherentActionScope(#1,#2) )
		{
			^ <- #1;
			^ <& #2;
		}
		else
		{
			Fail();
		}
	}
)

(TaskDialogueAct_Rule02 :
 	[ TaskDialogueAct -> lexPrepTo? lexVerb lexPrepFor? ]
	{
		^.Action.ActionDomain <- getActionDomainFromLemma(#2.VerbRoot);
	}
)

(TaskDialogueAct_Rule03 :
 	[ TaskDialogueAct -> lexPrepTo? lexVerb lexVerb lexPrepFor? ]
	{
		if(#2.VerbRoot == 'be' && #2.VerbForm == 'infinitive' && #3.VerbForm == 'past participle')
		{
			^.Action.ActionDomain <- getActionDomainFromLemma(#3.VerbRoot);
		}
		else
		{
			Fail();
		}
	}
)

