lektaProject
	projectHead
		projectDescriptor	: "Fluency"
		projectLanguageScope	: [ English, Spanish, Polish ]
		projectOperationScope	: [ Fluency ]
		projectInterfaceScope   : [ Written, Spoken ]
		projectCompileOutput 	: "Deployment/bin/AlterFluency.olk"

	projectSetup
		setupParserRoots = ProferenceChunk
		setupTokenizerNormalizeSpecActivate 
		//setupTokenizerNormalizeSpecDeactivate 
		//setupTokenizerNormalizeSpecDouble 
		setupTokenizerNormalizeInputActivate
		//setupTokenizerNormalizeInputDeactivate
		setupRuntimeSpyMessageOn
		//TokenizerStrategy:Base
		setupTokenizerSpellingChecker
		setupParserTokenNotFounds = lexSignChunk

	classModel
		#Include "Kernel/MainTypes.lkt"
		#Include "Domains/Alter/MainAlterTypes.lkt"

	functionModel
		#Include "Kernel/MainFunctions.lkt"
		#Include "Domains/Alter/MainAlterFunctions.lkt"

	lexicalModel forLanguage English 
		#Include "Kernel/MainEnglishLexicon.lkt"
		#Include "Domains/Alter/MainAlterEnglishLexicon.lkt"

	grammaticalModel forLanguage English
		#Include "Kernel/MainEnglishGrammar.lkt"
		#Include "Domains/Alter/MainAlterEnglishGrammar.lkt"

	conversationalModel
		#Include "Kernel/DialogueManager/MindBoard/MindBoardStructure.lkt"

	LaunchConversation: 
	{
		LaunchSendToMindBoard: (DialogueState = (DialoguePhase: 'booting_dialogue') )
	}

	ColligoSchemata
		#Include "Kernel/DialogueManager/Colligo/ColligoSchemata.lkt"

	SensoSchemata
		#Include "Kernel/DialogueManager/Senso/SensoSchemata.lkt"

	CogitoSchemata
