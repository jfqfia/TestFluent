	LocutioSchemata
		#Include "Kernel/DialogueManager/Locutio/LocutioSchemata.lkt"

	functionModel
		#Include "Kernel/DialogueManager/Functions/MainDialogueManagerFunctions.lkt"
		#Include "Domains/Alter/Scripts/AlterScript.lkt"

	scriboModel forLanguage English
		ScriboSchemata
